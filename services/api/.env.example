# API Configuration
API_BIND_ADDR=0.0.0.0:8080
RUST_LOG=info

# Database
DATABASE_URL=postgres://postgres:postgres@localhost/predictiq

# Redis
REDIS_URL=redis://127.0.0.1:6379

# Blockchain
BLOCKCHAIN_NETWORK=testnet
BLOCKCHAIN_RPC_URL=https://soroban-testnet.stellar.org
PREDICTIQ_CONTRACT_ID=predictiq_contract

# RPC Configuration
RPC_RETRY_ATTEMPTS=3
RPC_RETRY_BASE_DELAY_MS=200
EVENT_POLL_INTERVAL_SECS=5
TX_POLL_INTERVAL_SECS=4
CONFIRMATION_LEDGER_LAG=3

# Market Sync
SYNC_MARKET_IDS=1,2,3

# Content
FEATURED_LIMIT=10
CONTENT_DEFAULT_PAGE_SIZE=20

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@predictiq.com
BASE_URL=http://localhost:8080

# Security - API Keys (comma-separated)
API_KEYS=admin-key-1,admin-key-2,admin-key-3

# Security - Admin IP Whitelist (comma-separated)
ADMIN_WHITELIST_IPS=127.0.0.1,192.168.1.100

# Security - Request Signing Secret
REQUEST_SIGNING_SECRET=your-very-secure-secret-key-change-this

# Note: In production, use strong, randomly generated keys
# Generate API keys: openssl rand -hex 32
# Generate signing secret: openssl rand -base64 64
